<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_ksc_tree" model="ir.ui.view">
        <field name="name">sale.order.line.ksc.tree</field>
        <field name="model">sale.order.line.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="subtotal_without_tax"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_line_ksc_form" model="ir.ui.view">
        <field name="name">sale.order.ksc.line.form</field>
        <field name="model">sale.order.line.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="order_id"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="unit_price"/>
                            <field name="subtotal_without_tax"/>
                            <field name="state"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_line_ksc_search" model="ir.ui.view">
        <field name="name">sale.order.line.ksc.tree</field>
        <field name="model">sale.order.line.ksc</field>
        <field name="arch" type="xml">
            <search string="Search sale line order">
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="sale_order_line_ksc_action">
        <field name="name">sale order line ksc</field>
        <field name="res_model">sale.order.line.ksc</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sale_order_line_ksc" sequence="2"/>
    <menuitem id="menu_sale_order_ksc_line_2" name="sale order line" parent="product_category_ksc_id_1"
              action="sale_order_line_ksc_action"
              sequence="6"/>
</odoo>