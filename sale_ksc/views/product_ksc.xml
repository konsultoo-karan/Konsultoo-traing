<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_ksc_tree" model="ir.ui.view">
        <field name="name">product.category.ksc.tree</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sku"/>
                <field name="weight"/>
                <field name="length"/>
                <field name="barcode"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="product_category_ksc_form" model="ir.ui.view">
        <field name="name">product.category.ksc.form</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sku"/>
                            <field name="weight"/>
                            <field name="length"/>
                            <field name="barcode"/>
                        </group>
                        <group>
                            <field name="product_type"/>
                            <field name="sale_price"/>
                            <field name="cost_price"/>
                            <field name="product_category_id"/>
                            <field name="uom_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_category_ksc_filter" model="ir.ui.view">
        <field name="name">product category ksc search</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <search string="Search category">
                <field name="name"/>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_product_ksc">
        <field name="name">product category ksc</field>
        <field name="res_model">product.ksc</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_ksc" name="Product" sequence="2"/>
    <menuitem id="menu_product_ksc_2" name="product ksc" parent="product_category_ksc_id_1"
              action="action_product_ksc"
              sequence="2"/>

</odoo>