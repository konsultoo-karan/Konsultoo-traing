<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_state_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">

                        <div class="page">
                            <div class="oe_structure"/>
                            <div class="row mt32 mb32" id="informations">
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>Name:</strong>
                                    <p class="m-0" t-field="doc.name"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>code:</strong>
                                    <p class="m-0" t-field="doc.code"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>active:</strong>
                                    <p class="m-0" t-field="doc.active"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>country:</strong>
                                    <p class="m-0" t-field="doc.country_id"/>
                                </div>
                            </div>
                            <table class="table table-sm o_main_table">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th name="th_state" class="text-left">State</th>
                                        <th name="th_city" class="text-left">City</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="doc.cities" t-as="line">
                                        <tr>
                                            <t t-if="line.state">
                                                <td name="td_state" class="text-left">
                                                    <span t-field="line.state"/>
                                                </td>
                                                <td name="td_city" class="text-left">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_state">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="res_localization_ksc.report_state_document"/>
                </t>
            </t>
        </template>


        <template id="report_state_wizard_ksc">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1>DDD</h1>
                            <t t-esc="name"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

