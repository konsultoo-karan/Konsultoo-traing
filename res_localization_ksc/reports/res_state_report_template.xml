<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_state_ksc">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h1>State Report</h1>
                            <li>
                                State Name:
                                <span t-field="o.name"/>
                            </li>
                            <li>
                                State Code:
                                <span t-field="o.code"/>
                            </li>
                            <li>
                                Country:
                                <span t-field="o.country_id.name"/>
                            </li>
                            <li>Other Information Are Mention Below:-</li>
                            <table width="100%" style="border:1px solid black;border-collapse:collapse">
                                <tr>
                                    <th width="30">State Name</th>
                                    <th width="30">City Name</th>
                                </tr>
                                <t t-foreach="o.country_id.name" t-as="c">
                                    <tr>
                                        <td>
                                            <span t-field="o.city_ids.name"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

         <template id="report_action_wizard_1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>State Report</h2>
                            <t t-esc="name"/>
                        </div>
                    </t>
                </t>
            </t>
         </template>
    </data>
</odoo>