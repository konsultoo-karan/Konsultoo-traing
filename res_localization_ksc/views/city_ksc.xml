<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!--    Country-->
    <!--    TreeView-->
    <record id="view_res_city_ksc_tree" model="ir.ui.view">
        <field name="name">res.city.ksc Tree View</field>
        <field name="model">res.city.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <!--            FormView         -->

    <record id="view_res_city_ksc_form" model="ir.ui.view">
        <field name="name">res.city.ksc Form View</field>
        <field name="model">res.city.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state_id" widget="One2many"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!--    SearchView   -->
    <record id="view_res_city_ksc_search" model="ir.ui.view">
        <field name="name">res.city.ksc Search View</field>
        <field name="model">res.city.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state_id"/>
            </search>
        </field>
    </record>

    <record id="action_res_city_ksc" model="ir.actions.act_window">
        <field name="name">City</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.city.ksc</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <!--main Menu Item Show On Front Of Side -->
    <menuitem id="city_ksc_main_menu" parent="res_localization_ksc_main_menu" action="action_res_city_ksc"
              name="City" groups="base.group_user"/>


</odoo>
