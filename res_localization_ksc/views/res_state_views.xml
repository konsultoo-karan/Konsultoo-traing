<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="res_state_list_view" model="ir.ui.view">
            <field name="name">state.list.view</field>
            <field name="model">res.state.ksc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state_code"/>
                    <field name="cities_ids"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="res_state_form_view" model="ir.ui.view">
            <field name="name">state.form.view</field>
            <field name="model">res.state.ksc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state_code"/>
                            <field name="cities_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_state_search_view" model="ir.ui.view">
            <field name="name">res.state.search.view</field>
            <field name="model">res.state.ksc</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="State name"/>
                    <field name="state_code" string="state code"/>
                    <field name="country_id" string="country"/>
                </search>
<!--                <group expand="0" string="Group by Country">-->
<!--                    <filter string="Country" name="group_by_country" context="{'group_by':'country_id'}"/>-->
<!--                </group>-->
            </field>
        </record>


        <record id="res_state_localization_action_detail" model="ir.actions.act_window">
            <field name="name">State</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.state.ksc</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="state_root_menu_view" name="State" parent="localization_menu_id"
                  action="res_state_localization_action_detail" sequence="2" groups="base.group_user"/>

    </data>
</odoo>