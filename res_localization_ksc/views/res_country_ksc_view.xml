<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_country_tree_view" model="ir.ui.view">
        <field name="name">res.country.tree.view</field>
        <field name="model">res.country.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="country_name"/>
                <field name="country_code"/>
                <field name="states_ids"/>
            </tree>
        </field>
    </record>

    <record id="res_country_form_view" model="ir.ui.view">
        <field name="name">res.country.form.view</field>
        <field name="model">res.country.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="country_name"/>
                        <field name="country_code"/>
                        <field name="states_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_country_search_view" model="ir.ui.view">
        <field name="name">res.country.search.view</field>
        <field name="model">res.country.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="country_name"/>
                <field name="country_code"/>
            </search>
        </field>
    </record>

    <!--    <record id="action_res_localization_ksc" model="ir.actions.act_window">-->
    <!--        <field name="name">Res Localization Ksc</field>-->
    <!--        <field name="res_model">res.country.ksc</field>-->
    <!--        <field name="view_mode">tree,form</field>-->
    <!--    </record>-->

    <record id="action_res_country_ksc" model="ir.actions.act_window">
        <field name="name">Countries</field>
        <field name="res_model">res.country.ksc</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="res_localization_ksc_menu" action="action_res_country_ksc" name="Res Localization Ksc"
              groups="base.group_user"/>
    <menuitem id="res_country_ksc_sub_menu" action="action_res_country_ksc" name="Countries"
              parent="res_localization_ksc_menu" groups="base.group_user"/>


</odoo>