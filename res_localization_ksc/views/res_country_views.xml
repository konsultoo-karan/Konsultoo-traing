<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_country_list_view" model="ir.ui.view">
            <field name="name">country.list.view</field>
            <field name="model">res.country.ksc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="states_ids"/>
                </tree>
            </field>
        </record>

        <record id="res_country_form_view" model="ir.ui.view">
            <field name="name">country.form.view</field>
            <field name="model">res.country.ksc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="states_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_country_search_view" model="ir.ui.view">
            <field name="name">country.search.view</field>
            <field name="model">res.country.ksc</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Country name"/>
                    <field name="code" string="Country code"/>
                </search>
            </field>
        </record>


        <record id="res_localization_action_detail" model="ir.actions.act_window">
            <field name="name">Countries</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.ksc</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="localization_root_menu_view" name="localization"/>
        <menuitem id="localization_menu_id" name="localization" action="res_localization_action_detail"
                  parent="localization_root_menu_view"/>

        <menuitem id="countries_menu_id" action="res_localization_action_detail"
                  parent="localization_menu_id" name="Countries"  groups="base.group_user"/>
    </data>
</odoo>