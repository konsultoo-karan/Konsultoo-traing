<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!--    TreeView-->
    <record id="view_res_sate_ksc_tree" model="ir.ui.view">
        <field name="name">res.state.ksc Tree View</field>
        <field name="model">res.state.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
                <field name="city_ids"/>
            </tree>
        </field>
    </record>

    <!--            FormView         -->

    <record id="view_res_state_ksc_form" model="ir.ui.view">
        <field name="name">res.state.ksc Form View</field>
        <field name="model">res.state.ksc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="country_id" widget="Many2one"/>
                        <field name="city_ids" widget="One2many"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!--    SearchView   -->
    <record id="view_res_state_ksc_search" model="ir.ui.view">
        <field name="name">res.state.ksc Search View</field>
        <field name="model">res.state.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <!--                <field name="state_id"/>-->
                <group expand="0" string="Group By">
                    <filter string="Country" name="country_id" domain="" context="{'group_by':'country_id'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="action_res_state_ksc_profile" model="ir.actions.act_window">
        <field name="name">State</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.state.ksc</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <!--main Menu Item Show On Front Of Side -->
    <menuitem id="state_ksc_main_menu" parent="res_localization_ksc_main_menu" action="action_res_state_ksc_profile"
              name="States" groups="base.group_user"/>


</odoo>
