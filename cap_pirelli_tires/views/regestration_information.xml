<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="regestration_information_tree" model="ir.ui.view">
        <field name="name">regestration.information.tree</field>
        <field name="model">regestration.information</field>
        <field name="arch" type="xml">
            <tree>
                <field name="dealer_id"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="reg_card_number"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>
    <record id="regestration_information_form" model="ir.ui.view">
        <field name="name">regestration.information.form</field>
        <field name="model">regestration.information</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="dealer_id"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="street"/>
                            <field name="city_id"/>
                            <field name="state_id"/>
                            <field name="country_id"/>
                            <field name="reg_card_number"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="purchase_date"/>
                            <field name="model_name"/>
                            <field name="vin"/>
                            <field name="year"/>
                            <field name="enter_date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="dot_id_1"/>
                            <field name="qty_1"/>
                            <field name="dot_id_2"/>
                            <field name="qty_2"/>
                            <field name="dot_id_3"/>
                            <field name="qty_3"/>
                        </group>
                        <group>
                            <field name="dot_id_4"/>
                            <field name="qty_4"/>
                            <field name="dot_id_5"/>
                            <field name="qty_5"/>
                            <field name="dot_id_6"/>
                            <field name="qty_6"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_regestration_information">
        <field name="name">Regestration information</field>
        <field name="res_model">regestration.information</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id='regestration_information_id_2'
              parent="dealer_information_id_1"
              name="Regestration"
              action="action_regestration_information"
    />
</odoo>